extends layout

block content

  div.container
    nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
      ul(class="nav navbar-nav")
        li
          a(href='/main') Home
        li
          a(href='/logout') Log out
    div.row
      div.col-md-6
        h1= review.title
        h3 By #{review.author}
        hr
        p= review.review
        hr
      div.col-md-6
        div.spacer
        div.row
          div
            p(class='lead pull-left') Review by user #{review.reviewby}
            form(method='post' action='/follow' class='pull-right')
              input(type='hidden' value='#{review.reviewby}' name='member')
              input(type='submit' class='btn btn-success' value='follow')
        hr.closeline
        div.spacer
        p.lead Genre: #{review.genre}
        - if(review.tags.length > 0)
          p.lead Tags:
          ul
            - each tag in review.tags
              li= tag