extends layout

block content

  div.container
    nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
      ul(class="nav navbar-nav")
        li
          a(href='/main') Home
        li
          a(href='/logout') Log out
    div.row
      div.col-md-6
        h1= quest.name
        h3 By #{quest.madeby}
        hr
        p= quest.content
        hr
        - if(friend)
          form(method='post' action='/compose')
            input(type='hidden' name='sendto' value='#{quest.madeby}')
            input(type='submit' value='respond to this request')
      div.col-md-6
        div.spacer
        div.row
          div
            p(class='lead pull-left') Request by user #{quest.madeby}
            a(href='/profile/#{quest.madeby}' class='btn btn-default pull-right') View profile