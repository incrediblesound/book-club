extends layout

block content

  div.container
    nav(class="navbar navbar-default" role="navigation")
      ul(class="nav navbar-nav")
        li.active 
          a Home
        li
          a(href='/logout') Log out
        form(class="navbar-form navbar-left" role="search")
          div(class="form-group")    
            input(type="text" class="form-control" placeholder="Search")
          button(type="submit" class="btn btn-default") Search
    div.row
    div.col-md-8      
      h1 Welcome 
        =user.name
      hr
      - for(i=0;i<actions.length;i++)
        - if(actions[i].category === "note")
          div.news
            h1
              span(class="label label-info tab") N
            p= actions[i].description
            p On
              = actions[i].DateTime
              a(href='notes/#{actions[i].actionRef}')  Check it out!
    div.col-md-4
      div.main-nav
        div.button
          h3
            a(href="/notes") Notes
        div.button
          h3
            a(href='/list') Book Lists
        div.button
          h3
            a(href='/review') Book Reviews
        div.button
          h3
            a(href='/profile') Profile
