extends layout

block content

  div.container
    nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
      ul(class="nav navbar-nav")
        li
          a(href='/main') Home
        li
          a(href='/logout') Log out
    div.row
      h1(style='text-align: center;') Search Results
      hr
    div.row
      div.col-md-4
        h3 Lists
        - each list in lists
          a(href='/lists/#{list._id}')= list.name
          p by #{list.listby}
          hr.closeline
      div.col-md-4
        h3 Reviews
        - each review in reviews
          a(href='/reviews/#{review._id}')= review.title
          p by #{review.reviewby}
          hr.closeline
      div.col-md-4
        h3 Requests
        - each quest in quests
          a(href='/requests/#{quest._id}')= quest.name
          p by #{quest.madeby}
          hr.closeline