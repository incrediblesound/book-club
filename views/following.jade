extends layout

block content

  div.container
    nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
      ul(class="nav navbar-nav")
        li
          a(href='/main') Home
        li
          a(href='/logout') Log out
    div.row
    div.col-md-6
      h1 You are following:
      hr
      - each friend in friends
        div.row
          p(class='lead pull-left')= friend.name
          a(href='/profile/#{friend.username}' class='label label-default padleft') Profile
          form(method='post' action='/unfollow' class='pull-right')
            input(type='hidden' value='#{friend.username}' name='username')
            input(type='submit' class='btn btn-default' value='Unfollow')