extends layout

block content

  div.container
    nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
      ul(class="nav navbar-nav")
        li
          a(href='/main') Home
        li
          a(href='/logout') Log out
    div.col-md-6
      h1 Your Messages:
      hr
      - each message in mssgs
        div.row
          div(style='float:left')
            p <strong>Title:</strong> #{message.title}
            p <strong>From:</strong> #{message.sender}
          div(style='float:right')
            a(href='/messages/#{message._id}' class='btn btn-success') View
            a.padleft(htef='/messages/delete/#{message._id}' class='btn btn-danger') Delete
        hr.closeline
    div.col-md-6
      h1 Your Friends:
      form(method="post" action="/compose")
        - each friend in fllwng
          p= friend.name
          input(type="checkbox" name="sendto" value="#{friend.username}")
          br
        input(type="submit" class="btn btn-default" value="send")