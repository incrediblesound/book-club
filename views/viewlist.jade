extends layout

block content

  div.container
    nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
      ul(class="nav navbar-nav")
        li
          a(href='/main') Home
        li
          a(href='/logout') Log out
    div.row
      div.col-md-6
        h1= list.name
        h3 By #{list.listby}
        hr
        - each item in list.items
          p.lead= item.title
          p by #{item.author}
          p <i> #{item.description} </i>
          hr.closeline
      div.col-md-6
        div.spacer
        div.row
          div
            p(class='lead pull-left') list by user #{list.listby}
            a(href='/profile/#{list.listby}' class='btn btn-default pull-right') View profile
        hr.closeline