extends layout

block content

  div.container
    nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
      ul(class="nav navbar-nav")
        li
          a(href='/main') Home
        li
          a(href='/logout') Log out
    div.row
      div.col-md-6
        h1= list.name
        hr
        - for(i=0;i<list.items.length;i++)
          p.lead <strong>#{i+1})</strong> #{list.items[i].title}
          p By #{list.items[i].author}
          p <i> #{list.items[i].description} </i>
          - if(list.items[i].url.length > 0)
            span(class='label label-default') <strong>URL:</strong> #{list.items[i].url}
          hr.closeline
      div.col-md-6
        div.spacer
        div.row
          div
            p(class='lead pull-left') list by user #{list.listby}
            a(href='/profile/#{list.listby}' class='btn btn-default pull-right') View profile